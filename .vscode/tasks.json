{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "main.cpp",
                "functions.cpp",
                "hook.cpp",
                "maths.cpp",
                "registry.cpp",
                "entity/entity.cpp",
                "gui/font.cpp",
                "gui/gui.cpp",
                "gui/screen.cpp",
                "world/block.cpp",
                "world/core.cpp",
                "world/item.cpp",
                "world/level.cpp",
                "world/tick.cpp",
                "-lsdl2",
                "-lsdl2_image",
                "-lsdl2_gfx",
                "-o",
                "main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}